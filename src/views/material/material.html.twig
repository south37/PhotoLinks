{% extends 'layout.html.twig' %}

{% block contents %}
    {% include 'error.html.twig' with {errors: errors} %}

    <div class="row">
        <div class="span6 offset3">
            <div class="images">
                {% for image in images %}
                    <img src="{{ image['src'] }}" alt="image" value="{{ image['id'] }}" width="100" height="100">
                {% endfor %}
            </div>
        </div>

        <div class="span6 offset3">
            <form action="{{ urlFor('material_post') }}" method="post" id="image-select">
                <input type="text" name="image-id" value="" />
                <button id="image-select-btn" type="submit" class="btn btn-primary">コマ作成へ</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('/js/material.js') }}"></script>
{% endblock %}
