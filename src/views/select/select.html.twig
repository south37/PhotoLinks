{% extends 'layout.html.twig' %}

{% block contents %}
    {% include 'error.html.twig' with {errors: errors} %}

    <div class="row">
        <div class="span6 offset3">
            <div class="frames">
                <form action="" method="get" class="add-fm">
                    <img src="{{ first_frame['src'] }}" alt="plus1" value="{{ first_frame['id'] }}" width="100" height="100">
                    <input type="hidden" name="parent-frame-id" value="" />
                </form>
            </div>
            
            {% for frames in frame_rows %}
                <div class="frames">
                    <form action="{{ urlFor('add') }}" method="get" class="add-fm">
                    {% for frame in frames %} 
                        <img src="{{ frame['src'] }}" alt="plus1" value="{{ frame['id'] }}" width="100" height="100">
                    {% endfor %}
                        <input type="text" name="parent-frame-id" value="" />
                        <button type="submit" class="btn btn-primary">コマを追加</button>
                    </form>
                </div>
            {% endfor %}
            
           <form action="{{ urlFor('story_view') }}" method="get" id="story-fm">
                <input type="text" name="selected-frames-id" value="" />
                <button id="story-view-btn" type="submit" class="btn btn-primary">ストーリーを見る</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('/js/select.js') }}"></script>
{% endblock %}
